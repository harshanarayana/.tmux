# ------------------------------------------------------------------------------
# this is the place to override or undo settings

# Disable visual notifications.
set-option -g visual-activity off

# Disable bell notifications.
set-option -g bell-action none

# Disable window activity notifications.
set-window-option -g monitor-activity on

set -g status-keys vi
set -g mode-keys vi

# increase history size
set -g history-limit 100000000

# move status line to top
#set -g status-position top

set -g -q mouse on

bind-key a run-shell "tmux save-buffer - | nc localhost 8377"

bind-key right split-window -h
bind-key left split-window -hb

bind-key down split-window -v
bind-key up split-window -vb

# kill windows and panes without prompting

bind-key & kill-window
bind-key x kill-pane

bind-key R respawn-pane -k

bind-key S set-window-option synchronize-panes \; display-message "Pane sync toggled."

# send prefix
bind-key -n C-q send-prefix

# match base and window index for tmuxinator

set-window-option -g pane-base-index 1

# save all history to buffer and file

bind-key P command-prompt -p 'save history to filename:' -I '~/Dropbox/logs/tmux_buffer' 'capture-pane -S - ; save-buffer %1 ; delete-buffer'

# move status line to top
set -g status-position top

# attempt to fix tmux slowing with high output
# https://superuser.com/a/589896/311481

# clear history

bind -n C-k clear-history